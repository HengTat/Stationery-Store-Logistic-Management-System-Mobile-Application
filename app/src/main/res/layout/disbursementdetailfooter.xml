<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/footerbox"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#D3D3D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/acknowledgedisbursementbtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Acknowledge Disbursement"
        android:background="@drawable/button_submissions"
        android:textColor="	#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/footerbox"
        app:layout_constraintBottom_toBottomOf="@id/footerbox"
        app:layout_constraintLeft_toLeftOf="@id/footerbox"
        app:layout_constraintRight_toRightOf="@id/footerbox"
        />


</androidx.constraintlayout.widget.ConstraintLayout>