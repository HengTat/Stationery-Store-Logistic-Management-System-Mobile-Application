<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txtdisId"
        android:layout_width="411dp"
        android:layout_height="113dp"
        android:layout_weight="2"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical"
        android:text="   Disbursement ID"

        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pickdatebtn"
        android:background="@drawable/button_submissions"
        android:textColor="@android:color/white"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:text="Pick Date"
        app:layout_constraintBottom_toBottomOf="@+id/txtdisId"
        app:layout_constraintEnd_toEndOf="@+id/txtdisId"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/txtdisId"
        app:layout_constraintTop_toTopOf="@+id/txtdisId"
        app:layout_constraintVertical_bias="0.186" />

    <TextView
        android:id="@+id/selecteddate"
        android:layout_width="118dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/txtdisId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <TextView

        android:layout_width="118dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Date Selected :"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/txtdisId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647" />


</androidx.constraintlayout.widget.ConstraintLayout>
